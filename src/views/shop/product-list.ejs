<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>
    <main  class="grid">
        <% if (prods.length > 0) { %>
            <% for(book of prods) { %>
        <div>
            <article class="card product-item">
                <header class="card__header">
                    <h1 class="product__title"><%= book.title %></h1>
                </header>
                <div class="card__image">
                    <img src="<%= book.imageUrl %>" alt="A Book">
                </div>
                <div class="card__content">
                    <h2 class="product__price">Fr. <%= book.price %></h2>
                    <p class="product__description"><%= book.description %></p>
                </div>
                <div class="card__actions">
                    <form action="/add-to-cart" method="post">
                        <button class="btn" type="submit">Zum Warenkorb</button>
                    </form>
                </div>
            </article>
        </div>
        <% } } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>
