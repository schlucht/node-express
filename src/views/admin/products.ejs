<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
<%- include('../includes/navigation.ejs') %>

<main>
    <div class="grid">
    <% if (prods.length > 0) { %>
        <% for(product of prods) {%>
        <article class="card product-item">
            <header class="card__header">
                <h1 class="product__title"><%= product.title %></h1>
            </header>
            <div class="card__image">
                <img src="<%= product.imageUrl %>" alt="A Book">
            </div>
            <div class="card__content">
                <h2 class="product__price">Fr. <%= product.price %></h2>
                <p class="product__description"><%= product.description %></p>
            </div>
            <div class="card__actions">
                <a href="/admin/edit-product/<%=product.id%>?edit=true" class="btn">Berabeiten</a>
                <form action="/admin/delete-product" method="POST">
                    <button class="btn" type="submit">LÃ¶schen</button>
                    <input type="hidden" id="productId" name="productId" value="<%= product.id %>">
                </form>
            </div>
        </article>
        <% } } else { %>
            <h1>Keine Produkte gefunden!</h1>
            <% } %>
        </div>
</main>

<%- include('../includes/end.ejs') %>